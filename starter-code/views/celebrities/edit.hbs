<h2>Edit celebrity infos</h2>

<form action="/celebrities/{{this._id}}/edit"
      method="post">

       <label for="name">Edit Name</label>
       <input type="text"
              name="name"
              value="{{this.name}}">
       <br>

       <label for="occupation">Edit Occupation</label>
       <input type="text"
              name="occupation"
              value="{{this.occupation}}">
       <br>

       <label for="catchPhrase">Edit Catch Phrase</label>
       <input type="text"
              name="catchPhrase"
              value="{{this.catchPhrase}}">
       <br>

       <button type="submit">UPDATE</button>

</form>


